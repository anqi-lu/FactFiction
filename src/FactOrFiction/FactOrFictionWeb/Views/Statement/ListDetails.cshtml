@model IEnumerable<FactOrFictionWeb.Models.Statement>

@{
    ViewBag.Title = "Details";
}

<h2>Statements</h2>

<div>
    <dl class="dl-horizontal">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Classification)
                </th>
                <th>
                    Details
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Classification)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Statement", new {id = item.Id}, null)
                    </td>
                </tr>
            }
        </table>
    </dl>
</div>
