@model FactOrFictionCommon.Models.TextEntry

@{
    ViewData["Title"] = "Details";
}

<h2>Details of Text Entry</h2>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedByUser)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedByUser.UserName)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sentences.FirstOrDefault().Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sentences.FirstOrDefault().Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sentences.FirstOrDefault().VoteTrue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sentences.FirstOrDefault().VoteFalse)
                </th>
            </tr>
        </thead>
        @foreach (var sentence in Model.Sentences)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => sentence.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sentence.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sentence.VoteTrue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sentence.VoteFalse)
                </td>
            </tr>
        }
    </table>

</div>